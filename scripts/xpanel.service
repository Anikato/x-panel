[Unit]
Description=X-Panel Server Management Panel
Documentation=https://github.com/xpanel/xpanel
After=network.target

[Service]
Type=simple
ExecStart=/opt/xpanel/xpanel
WorkingDirectory=/opt/xpanel
Restart=always
RestartSec=5
LimitNOFILE=65535
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
